<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout
    tools:context="com.example.joaquimnabor.escalonadorprocessos.SettingsActivity"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="16sp"
        android:id="@+id/topLL">

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="50dp"
            android:id="@+id/processadores"
            android:inputType="numberDecimal"
            android:gravity="center"
            android:layout_weight="1"
            android:hint="Cores"/>

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="50dp"
            android:id="@+id/processos"
            android:inputType="numberDecimal"
            android:gravity="center"
            android:layout_weight="1"
            android:hint="Process"/>

        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/midLL"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">


            <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/ltgButton" android:layout_weight="1" android:text="LTG"/>

            <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/fprrButton" android:layout_weight="1" android:text="FPRR"/>

            <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/ibaButton" android:layout_weight="1" android:text="IBA"/>


        </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/botLL"
                android:layout_below="@+id/midLL">

                <EditText
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/quantum"
                    android:inputType="numberDecimal"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:hint="Quantum"/>

            </LinearLayout>

            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/startButton"
                android:text="START"
                android:layout_below="@+id/botLL"
                android:layout_alignParentRight="true"/>



</RelativeLayout>
